---
import { layoutData } from '../../data/layout-data';

interface Props {
	title: string;
  keywords?: string;
  image?: string;
  description?: string;
}

const { title } = Astro.props;
const url =  "https://ingelectuq.vercel.app";
const image =
  url + (Astro.props.image || "/image-meta.png");
const description = Astro.props.description || layoutData.description;
const keywords = Astro.props.keywords || layoutData.keywords;
const mainTitle = "ingelect uq";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={keywords} />
    <meta name="theme-color" content="#226db6" />
    <meta name="author" content="Wilfer Daniel Ciro Maya" />

    <title>{mainTitle} — {title}</title>
    <meta name="title" content={`${mainTitle} — ${title}`} />
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={`${mainTitle} — ${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={`${mainTitle} — ${title}`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <link rel="manifest" href="/manifest.json" />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	* {
		box-sizing: border-box;
	}
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--primary-color: #226db6;
		--text-size: 14px;
		--title3-size: 18px;
		--title4-size: 20px;
	}
	html {
		font-family: system-ui, sans-serif;
		background: white;
		color: #353a40;
		margin: 0px;
		padding: 0px;
		scroll-behavior: smooth;
	}
	a {
		color: #353a40;
	}
	body {
		margin: 0px;
		padding: 0px;
	}
</style>
